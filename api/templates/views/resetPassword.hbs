
{{>header}}
    <div class="dialog-card-square mdl-card mdl-shadow--16dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">{{ message }}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <form action="update" enctype="application/x-www-form-urlencoded" method="POST">
          <input type="hidden" name="oneTimeTokenId" value="{{oneTimeTokenId}}">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="password" name="password" minlength="5" id="new_password">
            <label class="mdl-textfield__label" for="new_password">{{{__ "Password"}}}</label>
            <span class="mdl-textfield__error">{{{__ "Length"}}}</span>
          </div>
        
          <button type="submit"  class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect dialog-button">
            {{{__ "CHANGE"}}}
          </button>
        </form>
      </div>
    </div>
{{>footer}}

 

